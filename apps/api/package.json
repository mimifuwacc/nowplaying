{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx watch functions/index.local.ts",
    "build": "pnpm run build:modules && pnpm run build:src",
    "build:modules": "./scripts/build-native-modules.sh",
    "build:src": "esbuild --bundle --outfile=./functions/dist/index.mjs --platform=node --format=esm --external:@aws-sdk/* --external:sharp --external:satori ./functions/index.ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.7",
    "@types/node": "^25.0.3",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.21.4",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "hono": "^4.11.1",
    "satori": "^0.18.3",
    "sharp": "^0.33.5"
  }
}
