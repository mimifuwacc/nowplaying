{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "ENV=development tsx watch lambda/index.local.ts",
    "build:lambda": "esbuild --bundle --outfile=./lambda/dist/index.mjs --platform=node --format=esm --external:@aws-sdk/* --external:sharp --external:satori ./lambda/index.ts",
    "build:layer": "./scripts/build-lambda-layer.sh",
    "deploy": "pnpm build:lambda && pnpm build:layer && cdk deploy --all"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "aws-cdk": "2.1100.1",
    "dotenv": "^17.2.3",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.957.0",
    "@aws-sdk/lib-dynamodb": "^3.957.0",
    "@hono/node-server": "^1.19.7",
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.4.4",
    "hono": "^4.11.1",
    "satori": "^0.18.3",
    "sharp": "^0.33.5",
    "tsx": "^4.21.0"
  }
}
